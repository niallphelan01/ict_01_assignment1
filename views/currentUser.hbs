{{> usermenu id="Update user"}}

<form class="ui stacked segment form" action="/updateCurrentUser" method="POST">
  <h3 class="ui header">Update the current user details</h3>
  <div class="two fields">
    <div class="field">
      <label>First Name</label>
      <input value="{{loggedInUserFirstname}}" type="text"  name="firstName">
    </div>
    <div class="field">
      <label>Last Name</label>
      <input value= "{{loggedInUserLastname}}" type="text"  name="lastName">
    </div>
  </div>
  <div class="field">
    <label>Email</label>
    <input value="{{loggedInUserEmail}}" type="text" name="email">
  </div>
    <div class="field">
        <label>Password</label>
        <input value="{{loggedInUserpassword}}" name="password">
    </div>
  <div class="field">
        <label>Address</label>
        <input value="{{loggedInUseraddress}}" type="text" name="address">
    </div>
    <div class="two fields">
    <div class="field">
        <label>Height</label>
        <input value="{{loggedInUserheight}}" type="text" name="height">
    </div>
    <div class="field">
        <label>Starting Weight</label>
        <input value="{{loggedInUserInitialWeight}}" type="text" name="initialweight">
    </div>
        <div class="field">
            <label>Gender</label>
            <input value="{{loggedInUserGender}}" type="text" name="gender">
        </div>
    </div>
    <button class="ui blue submit button">Submit</button>
</form>